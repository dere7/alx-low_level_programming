CC=gcc
SRC=$(wildcard *.c)
OBJ=$(SRC:%.c=%.o)
NAME=school
RM=rm
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re
all: $(OBJ)
	echo $(SRC)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS)    -c -o $@ $<

clean:
	$(RM) -f *~ school

oclean: 
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
	
